<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/cart_item_rate"
            >
            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ponni Rice"

                android:gravity="left"
                android:layout_marginRight="10dp"

                />

            <TextView android:id="@+id/cart_item_weight"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25 Kg"
                android:textStyle="italic"
                android:textSize="12sp"
                android:gravity="left"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/cart_item_rate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Rs.3000"
            android:layout_centerInParent="true"

            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/sign_multiply"
            />
        <TextView
            android:id="@+id/sign_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/cart_item_quantity"
            />

        <TextView
            android:id="@+id/cart_item_quantity"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="555"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/sign_equal"
            />
        <TextView
            android:id="@+id/sign_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/cart_item_total"
            />
        <TextView
            android:id="@+id/cart_item_total"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Rs. 1500"
            android:layout_centerInParent="true"
           android:layout_toLeftOf="@+id/cart_delete"
            />

        <ImageView
            android:id="@+id/cart_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"

            android:src="@drawable/ic_cart_delete" />
    </RelativeLayout>
</RelativeLayout>