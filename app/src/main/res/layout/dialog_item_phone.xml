<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="தொலைபேசி எண்"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <EditText android:id="@+id/dialog_customer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="உங்கள் தொலைபேசி எண்ணை உள்ளிடவும்"
        android:lines="1"
        android:inputType="phone"
        android:textColorHint="#A59D9D"
        android:background="@drawable/et_background"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="5dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="right"
        android:orientation="horizontal">
        <Button android:id="@+id/dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@color/white"
            />

        <Button android:id="@+id/dialog_cancel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="#D8103E"
            android:textColor="@color/white"
            />


    </LinearLayout>


</LinearLayout>